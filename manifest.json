{
  "manifest_version": 3,
  "name": "KoeMoji-Go Web",
  "version": "1.0.0",
  "description": "あらゆる音声を自動で文字起こし・AI要約。Web会議、デスクトップアプリ、ブラウザ音声すべてに対応。OpenAI Whisper + GPT-4による高精度な文字起こしと要約を実現します。",
  "author": "koemoji2024@gmail.com",

  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "offscreen"
  ],

  "host_permissions": [],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "options_page": "settings/settings.html"
}
